<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Stocki_Client.NoActionBar"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".ui.mainpage.portfolio.ShowPortfolioActivity"
            android:exported="false" />
        <activity
            android:name=".ui.settings.AboutActivity"
            android:exported="false" />
        <activity
            android:name=".ui.stock.model.history.ModelHistoryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.stock.ShowStockActivity"
            android:exported="false" />
        <activity
            android:name=".ui.mainpage.predictions.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>