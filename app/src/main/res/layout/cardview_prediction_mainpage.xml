<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvPredictionMainPage"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="@android:color/darker_gray"
    app:strokeWidth="1dp"
    tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        android:gravity="center">

        <!-- Aktienname -->
        <TextView
            android:id="@+id/txtStockNameMainPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            tools:text="AAPL"/>

        <!-- Return-Container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- === POINT-PREDICTION TEXT === -->
            <TextView
                android:id="@+id/txtPredictionReturnMainPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:visibility="visible"
                tools:text="+2.34%" />

            <LinearLayout
                android:id="@+id/layoutPredictionIntervalMainPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtPredictionIntervalBottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    tools:text="-1.20%" />

                <TextView
                    android:id="@+id/txtPredictionIntervalDash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="1dp"
                    android:textSize="13sp"
                    android:text="-" />

                <TextView
                    android:id="@+id/txtPredictionIntervalTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    tools:text="+3.40%" />
            </LinearLayout>

            <!-- Icon größer für bessere Sichtbarkeit -->
            <ImageView
                android:id="@+id/imgReturnArrowMainPage"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                tools:src="@drawable/arrow_trending_up_static"
                tools:ignore="ContentDescription"/>
        </LinearLayout>

        <!-- Risiko-Kreis -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <View
                android:id="@+id/viewConfIndicatorMainPage"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/circle_shape"
                tools:ignore="ContentDescription"/>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>



