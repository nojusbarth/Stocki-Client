<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_model_info"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingBottom="8dp"/>

        <!-- Latest Update -->
        <TextView
            android:id="@+id/txtLatestUpdateTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/model_latest_update"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/txtLatestUpdateValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/value_placeholder"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:textSize="14sp"/>

        <!-- Metrics -->
        <TextView
            android:id="@+id/txtMetricsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/model_metrics"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>

        <!-- Metrics Container -->
        <LinearLayout
            android:id="@+id/metricsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp">

            <!-- Metric 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/txtMAE"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/value_placeholder"
                    android:textSize="14sp"/>

                <FrameLayout
                    android:id="@+id/containerInfoMae"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_menu_info_details"
                        android:contentDescription="@string/desc_icon_MAE"/>
                </FrameLayout>
            </LinearLayout>

            <!-- Metric 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/txtHitRate"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/value_placeholder"
                    android:textSize="14sp"/>

                <FrameLayout
                    android:id="@+id/containerInfoHitRate"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_menu_info_details"
                        android:contentDescription="@string/desc_icon_Hits"/>
                </FrameLayout>
            </LinearLayout>

            <!-- Metric 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/txtSharpe"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/value_placeholder"
                    android:textSize="14sp"/>

                <FrameLayout
                    android:id="@+id/containerInfoSharpe"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_menu_info_details"
                        android:contentDescription="@string/desc_icon_Sharpe"/>
                </FrameLayout>
            </LinearLayout>

            <!-- Metric 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtMaxDrawDown"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/value_placeholder"
                    android:textSize="14sp"/>

                <FrameLayout
                    android:id="@+id/containerInfoMaxDrawdown"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_menu_info_details"
                        android:contentDescription="@string/desc_icon_Down"/>
                </FrameLayout>
            </LinearLayout>

        </LinearLayout>

        <!-- Risk Score -->
        <TextView
            android:id="@+id/txtRiskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/model_risk_score"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/txtRiskValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/value_placeholder"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:textSize="14sp"/>

        <!-- Optional Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShowModelHistory"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/model_history"
            style="@style/TimeChangeButtonStyle"
            app:backgroundTint="@null"/>

    </LinearLayout>
</ScrollView>
