<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Model Info"
        android:textStyle="bold"
        android:textSize="20dp"
        android:paddingBottom="8dp"/>


    <TextView
        android:id="@+id/txtLatestUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginTop="5dp"
        android:text="Latest update: ---"/>

    <TextView
        android:id="@+id/txtnumSamples"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginTop="5dp"

        android:text="Number samples used: ---"/>

    <TextView
        android:id="@+id/txtRiskScore"
        android:textSize="16dp"
        android:layout_marginTop="5dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Risk score: ---"/>

    <TextView
        android:id="@+id/txtMetrics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginTop="5dp"

        android:text="Metrics: ---"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnShowModelHistory"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:text="Show History"
        style="@style/TimeChangeButtonStyle"
        app:backgroundTint="@null"/>

</LinearLayout>
