<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.stock.ShowStockActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBarShowStock"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/light_gray"
        app:title=""
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/mainScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolBarShowStock"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Title -->
            <TextView
                android:id="@+id/txtStockTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="PLACEHOLDER"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <!-- Chart mit Rahmen -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:strokeColor="@android:color/darker_gray"
                app:strokeWidth="1dp">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/stockDataChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:clipChildren="false"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTimeChangeHourly"
                    style="@style/TimeChangeButtonStyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:text="hourly"
                    android:layout_marginEnd="10dp"
                    app:backgroundTint="@null"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTimeChangeDaily"
                    style="@style/TimeChangeButtonStyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:text="daily"
                    android:layout_marginStart="10dp"
                    app:backgroundTint="@null"/>
            </LinearLayout>

            <!-- RecyclerView mit Padding -->
            <com.example.stocki_client.ui.WrapContentRecyclerView
                android:id="@+id/recPredictions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:padding="8dp"
                android:nestedScrollingEnabled="false"
                android:layoutAnimation="@anim/layout_animation_fall_down"
                android:overScrollMode="never"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>

