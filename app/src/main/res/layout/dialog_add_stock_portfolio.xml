<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/dialog_add_stock_portfolio"
    android:padding="24dp">

    <com.example.stocki_client.ui.ClearableAutoCompleteTextView
        android:id="@+id/stockSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Aktie auswählen"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:completionThreshold="1"
        android:inputType="text"/>

    <TextView
        android:id="@+id/txtCash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cash verfügbar: $0.00"
        android:textSize="15sp"
        android:layout_marginTop="12dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutBuyAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kaufbetrag ($)"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etBuyAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
