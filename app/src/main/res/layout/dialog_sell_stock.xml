<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/dialog_sell_stock"
    android:padding="24dp">

    <!-- Aktienname -->
    <TextView
        android:id="@+id/txtStockNameSell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AAPL"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <!-- Aktueller Wert der Position -->
    <TextView
        android:id="@+id/txtStockValueSell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Positionswert: $0.00"
        android:textSize="15sp"
        android:layout_marginBottom="12dp" />

    <!-- Eingabefeld fÃ¼r Verkaufsbetrag -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutSellAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Verkaufsbetrag ($)">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSellAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnAllSell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alles verkaufen"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnSellAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verkaufen" />
    </LinearLayout>

</LinearLayout>
