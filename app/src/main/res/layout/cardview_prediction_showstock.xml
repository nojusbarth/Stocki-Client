<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvPredictionShowStock"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="@android:color/darker_gray"
    app:strokeWidth="1dp">

    <!-- FrameLayout fÃ¼r Info-Icon oben rechts -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Hauptinhalt -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Datum oben -->
            <TextView
                android:id="@+id/txtPredictionDateShowStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="@android:color/darker_gray"
                android:text="@string/date_placeholder"
                android:layout_marginBottom="8dp" />

            <!-- Return + Risiko in einer Zeile -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="2"
                android:baselineAligned="false">

                <!-- === RETURN CONTAINER === -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|start">

                    <!-- Label -->
                    <TextView
                        android:id="@+id/txtReturnLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_return"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="6dp" />

                    <!-- === POINT-PREDICTION MODE === -->
                    <LinearLayout
                        android:id="@+id/layoutReturnPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/txtReturnValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="@string/value_placeholder"
                            android:textStyle="bold"
                            android:layout_marginEnd="4dp" />
                    </LinearLayout>

                    <!-- === INTERVAL MODE === -->
                    <LinearLayout
                        android:id="@+id/layoutReturnInterval"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:visibility="gone"
                        android:layout_marginStart="2dp">

                        <TextView
                            android:id="@+id/txtReturnIntervalBottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txtReturnIntervalDash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="1dp"
                            android:text="-"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/txtReturnIntervalTop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <!-- Gemeinsame Pfeil-Icon -->
                    <ImageView
                        android:id="@+id/imgReturnArrow"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/arrow_trending_up_static"
                        android:contentDescription="@string/desc_trend_icon" />
                </LinearLayout>

                <!-- === RISIKO CONTAINER === -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|end">

                    <TextView
                        android:id="@+id/txtPredictionConfShowStock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_confidence"
                        android:textSize="16sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginEnd="6dp" />

                    <View
                        android:id="@+id/viewConfIndicatorShowStock"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/circle_shape" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Info-Icon oben rechts -->
        <ImageView
            android:id="@+id/imgInfoCardHint"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="top|end"
            android:layout_margin="8dp"
            android:src="@android:drawable/ic_menu_info_details"
            android:alpha="0.6"
            android:contentDescription="@string/desc_pred_card_hint"
            app:tint="@color/black" />
    </FrameLayout>
</com.google.android.material.card.MaterialCardView>


